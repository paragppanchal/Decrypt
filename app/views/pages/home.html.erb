

<!-- cover -->
<section class="hero hero-with-header section-decorated-bottom">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <!-- <span class="eyebrow mb-1 text-primary">Ready to start ?</span> -->
        <h1 class="display-2"><b>Cryptocurrency</b> made easy.</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="row gutter-1">
          <div class="form-group col-md-5">
            <%= form_tag buy_bitcoin_path, method: :get do %>
            <%= text_field_tag :query, params[:query], class: "form-control-lg form-control", placeholder: "Enter USD amount"%>
          </div>
          <div class="form-group col-md-5">
            <div onclick="dropdownCurrency()">
              <div class="selectric-wrapper selectric-form-control selectric-form-control-lg">
                <div class="selectric-hide-select">
                  <select class="form-control form-control-lg" id="exampleFormControlSelect1" tabindex="-1" style="">
                    <option>Bitcoin</option>
                    <option>Ethereum</option>
                    <option>Litecoin</option>
                  </select>
                </div>
                <div class="selectric">
                  <span class="label">Bitcoin</span>
                  <b class="button">â–¾</b>
                </div>
              </div>

              <div class="selectric-items" tabindex="-1" id="searchButton">
                <div class="selectric-scroll" >
                  <ul>
                    <li data-index="0" class="selected">Bitcoin</li>
                    <li data-index="1" class="">Ethereum</li>
                    <li data-index="2" class="last">Litecoin</li>
                  </ul>
                </div>
              </div>
              <input class="selectric-input" tabindex="0">
            </div>
          </div>
          <div class="form-group col-md-2">
            <button type="submit" class="btn btn-lg btn-block btn-primary">
              <i class="fas fa-search"></i>
              Compare
            </button>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  function dropdownCurrency() {
    var x = document.getElementById("searchButton");
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
</script>
