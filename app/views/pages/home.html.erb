

<!-- cover -->
<section class="hero hero-with-header section-decorated-bottom">
  <div class="container">
    <div class="row hero-justify-center">
      <div class="col-md-10">
        <!-- <span class="eyebrow mb-1 text-primary">Ready to start ?</span> -->
        <h1 class="display-2"><b>Cryptocurrency</b> made easy</h1>
        <h2>Find the best prices on exchanges in seconds</h2>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="row gutter-1 search-justify-center">
          <div class="form-group col-md-5">
            <%= form_tag buy_bitcoin_path, method: :get do %>
            <%= text_field_tag :amount, params[:amount], class: "form-control-lg form-control", placeholder: "Enter USD amount", type:'number', min: '1'%>
          </div>
          <div class="form-group col-md-3">


            <select class="form-control form-control-lg" id="exampleFormControlSelect1" tabindex="-1" style="">
              <option value="btc">Bitcoin</option>
              <option value="eth">Ethereum</option>
              <option value="ltc">Litecoin</option>
            </select>


          </div>
          <div class="form-group col-md-2">
            <button type="submit" class="btn btn-lg btn-block btn-primary">
              <i class="fas fa-search"></i>
              Compare
            </button>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- / cover -->

