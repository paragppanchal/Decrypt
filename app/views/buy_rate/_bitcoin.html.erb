  <section class="hero hero-with-header hero-compare-page">
    <div class="container">
      <div class="row hero-buy-bitcoin-center-align">
        <div class="col-md-10">
          <!-- <span class="eyebrow mb-1 text-primary">Ready to start ?</span> -->
          <h1 class="display-2">Prices <b>compared.</b> </h1>
        </div>
      </div>
    </div>
  </section>

  <!--  wave -->
  <section class="section-decorated-bottom pt-0">
    <div class="decorated-bottom text-light">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 40"  preserveAspectRatio="none">
        <path d="">
          <animate
          attributeName="d"
          begin="0s"
          dur="5s"
          repeatCount="indefinite"
          values="
          M0,0 C200,7.11236625e-15 200,40 400,40 C600,40 800,0 1000,0 L1000,50 L0,50 L0,0 Z;
          M0,40 C200,40 400,0 600,0 C800,0 800,40 1000,40 L1000,50 L0,50 L0,40 Z;
          M0,30 C200,30 200,0 400,0 C600,0 800,40 1000,40 L1000,50 L0,50 L0,30 Z;
          M0,0 C200,7.11236625e-15 200,40 400,40 C600,40 800,0 1000,0 L1000,50 L0,50 L0,0 Z;"></animate>
        </path>
      </svg>
    </div>
  </section>
  <!-- / wave -->

  <!-- about -->
  <section class="bg-light pb-0">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="container site-wrapper">
              <div class="row" id="content">
                <div class="col-md-12 col-lg-3" id="sidebar">

                  <!-- refine results -->
                  <div class="refine-results">
                    <div class="refine-results-search">
                      <%= form_tag buy_bitcoin_path, method: :get, remote: true do %>
                      <%= text_field_tag :amount, params[:amount], class: "refine-results-form-control", placeholder: "USD", type:'number', min: '1'%>
                      <br>
                      <button type="submit" class="btn-outline-indigo btn btn-md btn-primary refine-results-button">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>

                    <div class="refine-results-checkboxes">
                      <%= render 'checkboxes' %>
                    </div>

                    <% end %>

                  </div><!-- /refine results -->
                  <!-- price-alert-modal -->
                  <br>
                  <button id="myBtn" class="btn btn-primary btn-block btn-outline-purple"">Price Alert</button>
                  <div id="myModal" class="modal">
                    <div class="email-modal-content">
                      <span class="close">&times;</span>
                      <p>One <strong>Bitcoin</strong> will cost <strong>US $7,589.63</strong>. Subscribe to be notified of any changes in the price</p>
                      <label for="email"><b>Email address:</b></label>
                      <input type="text" placeholder="YourEmail@gmail.com" name="email" required>
                      <button type="submit" class="signupbtn btn btn-sm btn-rounded btn-outline-primary mt-2">Subscribe</button>
                    </div>
                  </div>
                  <!-- /price-alert-modal -->
                </div> <!-- /sidebar -->



                <div class="col-md-12 col-lg-9" id="comparison-section">
                  <%= render 'comparison' %>
                </div>
              </div><!-- /#content -->
            </div><!-- /site-wrapper -->
        </div> <!-- col-md-10 -->
      </div><!-- /row justify-content-center -->
    </div><!-- /container -->
  </section>
  <!-- / about -->
