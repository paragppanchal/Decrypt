  <section class="hero hero-with-header hero-compare-page">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <!-- <span class="eyebrow mb-1 text-primary">Ready to start ?</span> -->
          <h1 class="display-2">Find the best cryptocurrency price in <b>seconds.</b> </h1>
        </div>
      </div>
    </div>
  </section>

  <style>
  .hero-compare-page{
    padding-bottom: 0!important;
  }
</style>
