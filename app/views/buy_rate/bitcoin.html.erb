<!-- about -->
<section class="bg-light pb-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="row separator-bottom pb-5 mb-5">
          <div class="container site-wrapper">
            <div class="row" id="content">
              <div class="col-lg-3" id="sidebar">
                <!-- price-alert-modal -->
                <button id="myBtn" class="btn btn-primary btn-block"">Price Alert</button>
                <div id="myModal" class="modal">
                  <div class="email-modal-content">
                    <span class="close">&times;</span>
                    <p>One <strong>Bitcoin</strong> will cost <strong>US $7,589.63</strong>. Subscribe to be notified of any changes in the price</p>
                    <label for="email"><b>Email address:</b></label>
                    <input type="text" placeholder="YourEmail@gmail.com" name="email" required>
                    <button type="submit" class="signupbtn btn btn-sm btn-rounded btn-outline-primary mt-2">Subscribe</button>
                  </div>
                </div>
                <!-- /price-alert-modal -->

                <div class="refine-results">

                  <h6><b>Payment Methods</b></h6>
                  <ul>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'SWIFT Bank Transfer', true  %>
                      <p>SWIFT Bank Transfer</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'SEPA Bank Transfer', true  %>
                      <p>SEPA Bank Transfer</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'VISA', true  %>
                      <p>VISA</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Mastercard', true  %>
                      <p>Mastercard</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Paypal', true  %>
                      <p>Paypal</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Sofort', true  %>
                      <p>Sofort</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Giropay', true  %>
                      <p>Giropay</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Skrill', true  %>
                      <p>Skrill</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'iDeal', true  %>
                      <p>iDeal</p>
                    </li>
                    <li>
                      <%= check_box_tag 'payment_methods[]', 'Bancontact / Mister', true  %>
                      <p>Bancontact / Mister</p>
                    </li>
                  </ul>
                  <h6><b>Features</b></h6>
                  <ul>
                    <li>
                      <%= check_box_tag 'features[]', 'Beginner Friendly', true  %>
                      <p>Beginner Friendly</p>
                    </li>
                    <li>
                      <%= check_box_tag 'features[]', 'Instant Verification', true  %>
                      <p>Instant Verification</p>
                    </li>
                    <li>
                      <%= check_box_tag 'features[]', 'Integrated Wallet', true  %>
                      <p>Integrated Wallet</p>
                    </li>
                  </ul>
                  <h6><b>Security</b></h6>
                  <ul>
                    <li>
                      <%= check_box_tag 'security[]', 'Two-factor Authentication', true  %>
                      <p>Two-factor Authentication</p>
                    </li>
                    <li>
                      <%= check_box_tag 'security[]', 'Cold Storage', true  %>
                      <p>Cold Storage</p>
                    </li>
                    <li>
                      <%= check_box_tag 'security[]', 'Multisig Wallets', true  %>
                      <p>Multisig Wallets</p>
                    </li>
                  </ul>
                </div>
              </div>



                <div class="col-9" id="comparison-section">
                  <% b = Exchange.all %>
                  <div class="results-sort">
                    <p><%= b.count %> results sorted by Best</p>
                    <p>Sort By</p>
                  </div>
                  <ul class="comparison-results ">
                    <%  b.each do |exchange| %>

                    <li class="results-list card js-results-list">
                      <div class="exchange-table-row">
                        <div class="message-name">
                          <%= image_tag("#{exchange.name}.png", :alt => "#{exchange.name}", class:'logo-size logo-block') %>
                          <div class="exchange-ratings">
                            <% exchange.rating.times do %>
                            <%= icon('star', 'Font Awesome', class: 'fa fa-star star-yellow') %>
                            <% end %>
                          </div>
                          <div class="more-info js-exchange-modal-click">
                            <h7>Read More</h7>
                          </div>
                        </div>


                        <div class="message-status">
                          <% if false %>
                          <p>$<%= exchange.market_snapshot.buy_price.round(2) %></p>
                          <% end %>
                        </div>

                        <div class="action-button">
                          <a href= <%= exchange.url %> target="_blank" >
                            <button type="button" class="btn btn-primary">Go to site</button>
                          </a>
                        </div>
                      </div>
                      <div class="exchange-modal js-exchange-modal">
                        <div class="exchange-modal-content">
                          <div class="col-12">
                            <h3><%= exchange.name.capitalize %></h3>
                            <%= image_tag("#{exchange.name}.png", :alt => "#{exchange.name}", class:'logo-size logo-block') %>
                            <h4><%= exchange.country %></h4>
                            <h4><%= exchange.verification_time %></h4>
                            <h4><%= exchange.fee_description %></h4>
                            <h4><%= exchange.fees %></h4>
                            <h4><%= exchange.rating %></h4>
                            <% payouts = exchange.payout_methods %>
                            <% payouts.each do |payout| %>
                            <h4><%= payout %></h4>
                            <% end %>
                          </div>

                          <div class="js-exchange-modal-click close-modal">x
                          </div>
                        </div>
                      </div>
                    </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- / about -->
